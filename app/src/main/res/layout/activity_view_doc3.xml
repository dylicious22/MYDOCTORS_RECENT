<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.dylicious.mydoctors.ViewDoc3">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text = "Consultation Day:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"/>

    <CheckBox
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/monConsult"
        android:text="Monday"
        android:layout_marginBottom="10dp"/>

    <CheckBox
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tueConsult"
        android:text="Tuesday"
        android:checked="true"
        android:layout_marginBottom="10dp" />

    <CheckBox
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wedConsult"
        android:text="Wednesday"
        android:layout_marginBottom="10dp"/>

    <CheckBox
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/thursConsult"
        android:text="Thursday"
        android:layout_marginBottom="10dp"/>

    <CheckBox
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/friConsult"
        android:text="Friday"
        android:layout_marginBottom="10dp"/>

    <CheckBox
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/satConsult"
        android:text = "Saturday"
        android:layout_marginBottom="10dp"/>

    <CheckBox
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sunConsult"
        android:text="Sunday"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/confirmDoc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="SAVE"
        android:background="@color/white"
        android:layout_marginTop="55dp"
        android:layout_gravity="end"/>

</LinearLayout>
